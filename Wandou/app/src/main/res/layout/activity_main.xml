<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.air.wandou.widget.Topbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_home"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:leftButtonIcon="@drawable/icon_back_32px"
        app:rightButtonIcon="@drawable/icon_back_32px"
        app:title="@string/app_name"
        app:isShowSearchView="false"
        >

    </com.example.air.wandou.widget.Topbar>

    <com.ycl.tabview.library.TabView
        android:id="@+id/tabView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.ycl.tabview.library.TabView>

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.example.air.wandou.fragment.FragmentHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <fragment
        android:id="@+id/fragment_mall"
        android:name="com.example.air.wandou.fragment.FragmentMall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <fragment
        android:id="@+id/fragment_cart"
        android:name="com.example.air.wandou.fragment.FragmentCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <fragment
        android:id="@+id/fragment_mine"
        android:name="com.example.air.wandou.fragment.FragmentMine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>
